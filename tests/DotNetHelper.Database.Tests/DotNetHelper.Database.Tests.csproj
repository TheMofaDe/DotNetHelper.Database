<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;net45;netcoreapp2.2</TargetFrameworks>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Scripts\sqlite.sql" />
    <None Remove="Scripts\sqlite2.sql" />
    <None Remove="Scripts\sqlserver.sql" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Scripts\sqlite2.sql" />
    <EmbeddedResource Include="Scripts\sqlite.sql" />
    <EmbeddedResource Include="Scripts\sqlserver.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetHelper.Serialization.Csv" Version="1.0.10" />
    <PackageReference Include="DotNetHelper.Serialization.Json" Version="1.0.12" />
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.13.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\DotNetHelper.Database\DotNetHelper.Database.csproj" />
  </ItemGroup>


  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.2'">
    <PackageReference Include="Microsoft.Data.Sqlite">
      <!--Microsoft.EntityFrameworkCore.Sqlite-->
      <Version>3.0.0-preview6.19304.10</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net452'">
    <PackageReference Include="Microsoft.Data.Sqlite">
      <!--Microsoft.EntityFrameworkCore.Sqlite-->
      <Version>2.0.0-preview1-final</Version>
    </PackageReference>
  </ItemGroup>

</Project>
