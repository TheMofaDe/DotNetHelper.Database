<Project>
  <Import Project="$(RepoRootPath)build\msbuild\Version.props"/>

  <PropertyGroup Condition="$([System.Text.RegularExpressions.Regex]::IsMatch('$(TargetFramework)', '^net\d'))">
    <DefineConstants>$(DefineConstants);NETFRAMEWORK</DefineConstants>
    <NETFRAMEWORK>true</NETFRAMEWORK>
  </PropertyGroup>
  <PropertyGroup Condition="$([System.Text.RegularExpressions.Regex]::IsMatch('$(TargetFramework)', '^netstandard\d'))">
    <DefineConstants>$(DefineConstants);NETSTANDARD</DefineConstants>
    <NETSTANDARD>true</NETSTANDARD>
  </PropertyGroup>
  <PropertyGroup Condition="$([System.Text.RegularExpressions.Regex]::IsMatch('$(TargetFramework)', '^netcoreapp\d'))">
    <DefineConstants>$(DefineConstants);NETCORE</DefineConstants>
    <NETCORE>true</NETCORE>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants Condition="$([MSBuild]::IsOSPlatform('OSX')) == 'true'">__MACOS__;$(DefineConstants)</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>$(GitRepositoryUrl)</PackageProjectUrl>
    <!-- <PackageIconUrl>https://github.com/TheMofaDe/DotNetHelper.Database</PackageIconUrl> -->
    <RepositoryUrl>$(GitRepositoryUrl)</RepositoryUrl>
    <PackageReleaseNotes>$(GitRepositoryUrl)/blob/master/CHANGELOG.md</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>ORM,database,sql,generic,dynamic,anonyous</PackageTags>
    <RepositoryType>git</RepositoryType>
    <Description>DotNetHelper.Database is a lightweight ORM that works with generics,dynamic, &amp; anonyous objects for ADO.NET</Description>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RepositoryCommit>$(GitCommit)</RepositoryCommit>
    <RepositoryBranch>$(GitBranch)</RepositoryBranch>
    <Authors>Joseph McNeal Jr</Authors>
    <Company>Joseph McNeal Jr</Company>
    <NeutralLanguage>en-US</NeutralLanguage>
    <language>$(NeutralLanguage)</language>
    <Copyright>$([System.DateTime]::Now.ToString('yyyy')) Joseph McNeal Jr</Copyright>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>


  <PropertyGroup  Condition="'$(SignAssembly)' == 'true'">
    <PublicSign>true</PublicSign>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile Condition="'$(AssemblyOriginatorKeyFile)' == ''">$(MSBuildThisFileDirectory)keysign.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>



  <ItemGroup>
    <None Include="..\..\LICENSE.md" Pack="true" PackagePath="LICENSE.md"/>
    <Compile Include="$(MSBuildThisFileDirectory)ThisAssembly.cs" />
    <Compile
      Condition="'$(BuildingInsideVisualStudio)' == 'true' and Exists('$(IntermediateOutputPath)$(MSBuildProjectName).AssemblyInfo$(DefaultLanguageSourceExtension)')"
      Include="$(IntermediateOutputPath)$(MSBuildProjectName).AssemblyInfo$(DefaultLanguageSourceExtension)"
      Visible="false" />
  </ItemGroup>


</Project>